#!/bin/sh
# find all files with the extension pch and touch them
dflag=
while getopts ":d:" opt; do
    case $opt in
        d)
            dflag=1;
            dval="$OPTARG";
            ;;
        :)
            echo "Usage:\n`basename $0`: path";
            exit 1;
            ;;
    esac
done
shift $(($OPTIND - 1))

if [ -z "$1" ]; then
    echo "Usage:\n`basename $0`: path";
    exit 1;
fi

path="${1}";

if [ ! -d "${path}" ]; then
    echo "Not a path: $path";
    exit 2;
fi

/usr/bin/find "${path}" -maxdepth 1 -iname "*.pch" -exec touch {} +;
